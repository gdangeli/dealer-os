{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "dealeros.ch"
        }
      ],
      "destination": "https://www.dealeros.ch/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/notifications/daily-summary",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/notifications/longstanding",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/notifications/quote-expiry",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/notifications/invoice-overdue",
      "schedule": "0 9 * * 1,4"
    }
  ]
}
